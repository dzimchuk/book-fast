@model BookFast.ViewModels.CreateBookingViewModel

@{
    ViewData["Title"] = "Book an accommodation";
}

<h2>@ViewBag.AccommodationName</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-muted"></div>
        <input type="hidden" value="@ViewBag.AccommodationId" name="AccommodationId"/>
        <div class="form-group">
            <label asp-for="FromDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FromDate" class="form-control date"/>
                <span asp-validation-for="FromDate" class="text-muted" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ToDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ToDate" class="form-control date"/>
                <span asp-validation-for="ToDate" class="text-muted" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Book!" class="btn btn-success"/>
                <a class="btn btn-default" asp-controller="home" asp-action="Index">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Styles {
    <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/jquery-ui.min.css" />
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script>
        $(document).ready(function() {
            $(".date").datepicker();
        })
    </script>
}